{
	"name": "deep-research",
	"version": "1.0.0",
	"description": "Deep research CLI",
	"license": "MIT",
	"bin": {
		"deep-research": "./source/cli.tsx"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"start": "bun run source/cli.tsx",
		"dev": "bun run source/cli.tsx",
		"build": "tsc",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"dotenv": "^17.2.1",
		"ink": "^6.1.0",
		"meow": "^13.2.0",
		"openai": "^5.12.2",
		"react": "^19.1.1",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/node": "^24.2.1",
		"@types/react": "^19.1.10",
		"@types/yargs": "^17.0.33",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"bun-types": "^1.2.20",
		"chalk": "^5.5.0",
		"eslint-config-xo-react": "^0.28.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"xo": "^1.2.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
